# Sensitive configuration and environment files
wp-config.php
wp-config-sample.php
.htaccess

# Core WordPress directories ‚Äî not needed in version control
wp-admin/
wp-includes/

# Root-level WordPress files ‚Äî core files, should be excluded
index.php
license.txt
readme.html
wp-*.php
xmlrpc.php

# Python virtual environment
.venv-fonttools/

# -------------------------------------
# üìÅ Maintain Folder Structure: wp-content/themes/nextjswp-theme
# -------------------------------------

# First, ignore everything in wp-content
wp-content/*

# Then, allow the themes directory
!wp-content/themes/

# Ignore all themes
wp-content/themes/*

# But allow our custom theme
!wp-content/themes/nextjswp-theme/

# Ignore node_modules inside the theme
wp-content/themes/nextjswp-theme/node_modules/

# Allow everything else in the theme
!wp-content/themes/nextjswp-theme/**

